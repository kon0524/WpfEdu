<Window x:Class="WpfEdu.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEdu.Views"
        xmlns:vm="clr-namespace:WpfEdu.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="300">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBox x:Name="MyTextBox" Text="{Binding MyText}"/>
        <Button x:Name="MyButton" Content="押せ！" Command="{Binding PushCommand}"/>
    </StackPanel>
</Window>
